# Environment Configuration Template
# Copy this file to .env and update with your actual values
# This file demonstrates all available configuration options with sensible defaults

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=comprehensive-dev-portal
SERVER_PORT=3008
SERVER_CONTEXT_PATH=/api
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Connection (Development)
DB_URL=jdbc:postgresql://localhost:5432/devportalkirostart
DB_DRIVER=org.postgresql.Driver
DB_USERNAME=postgres
DB_PASSWORD=password

# Connection Pool Settings (HikariCP)
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_CONNECTION_TIMEOUT=20000
DB_POOL_MAX_LIFETIME=1200000
DB_POOL_LEAK_DETECTION=60000

# =============================================================================
# JPA/HIBERNATE CONFIGURATION
# =============================================================================
JPA_DDL_AUTO=create-drop
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_BATCH_SIZE=25
JPA_FETCH_SIZE=16

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_USER_NAME=admin
SECURITY_USER_PASSWORD=admin123
SECURITY_USER_ROLES=ADMIN

# JWT Configuration (for production)
JWT_SECRET=MySecretKeyForDevelopmentOnlyChangeInProduction
JWT_EXPIRATION=86400000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TYPE=caffeine
CACHE_SPEC=maximumSize=1000,expireAfterWrite=10m,expireAfterAccess=5m

# Redis Configuration (for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SECURITY=DEBUG
LOGGING_LEVEL_SQL=DEBUG
LOGGING_LEVEL_SQL_PARAMS=TRACE
LOGGING_FILE=logs/application.log
LOGGING_FILE_MAX_SIZE=10MB
LOGGING_FILE_MAX_HISTORY=30

# =============================================================================
# ACTUATOR/MONITORING CONFIGURATION
# =============================================================================
MANAGEMENT_ENDPOINTS_ENABLED=true
MANAGEMENT_HEALTH_SHOW_DETAILS=always

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_FILE_SIZE=10MB
UPLOAD_MAX_REQUEST_SIZE=50MB
UPLOAD_DIR=./uploads

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
GITHUB_TOKEN=
STACKOVERFLOW_KEY=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_CODE_EXECUTION=true
FEATURE_AI_ASSISTANCE=true
FEATURE_PROGRESS_ANALYTICS=true
FEATURE_SOCIAL_FEATURES=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SLOW_QUERY_THRESHOLD=1000
PERFORMANCE_REQUEST_TIMEOUT=30000